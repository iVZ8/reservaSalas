@model IEnumerable<reservaSalas.Models.Usuario>

@{
	ViewData["Title"] = "Lista de Usuário";
}

<h1>Lista de usuários</h1>
<p>
	<a asp-action="Create", class="btn btn-primary">Novo usuário</a>
</p>

<table class="table table-striped">
    <thead>
		<tr>
			<th>Id</th>
			<th>E-mail</th>
			<th>Administrador?</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Email</td>
				<td>@(item.Administrador ? "Sim" : "Não")</td>
				<td>
					<a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id">Detalhes</a>
					<a asp-action="Edit" class="btn btn-success"  asp-route-id="@item.Id">Editar</a>
					<a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Excluir</a>
				</td>
			</tr>
		}
	</tbody>
</table>
